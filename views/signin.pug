extends layout

block headCSS
    link(rel='stylesheet', href='/stylesheets/signin.css')

block content
    form.form-signin.text-center(method='POST' action='/signin')
        h1.h3.mb-3.font-weight-normal Please sign in
        label.sr-only(for='inputLogin') Login
        input#inputLogin.form-control(name='login', placeholder='Login', required='', autofocus='', type='')
        label.sr-only(for='inputPassword') Password
        input#inputPassword.form-control(name='password', placeholder='Password', required='', type='password')
        if(message)
            div.alert.alert-danger(role="alert") #{message}
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
